@page "/auth/forgot-password"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.InvoiceService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-key me-2"></i>Восстановление пароля</h2>
            <p class="text-muted">Введите email для получения кода восстановления</p>
        </div>

        <div class="auth-body">
            @if (!codeSent)
            {
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" @bind="email" class="form-control" placeholder="Введите ваш email" />
                </div>

                <button class="btn btn-primary w-100 mb-3" @onclick="SendCode" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Отправить код
                </button>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Код восстановления отправлен на вашу почту
                </div>

                <div class="mb-3">
                    <label class="form-label">Код из письма</label>
                    <input @bind="verificationCode" class="form-control" placeholder="Введите код" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Новый пароль</label>
                    <input type="password" @bind="newPassword" class="form-control" placeholder="Введите новый пароль" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Подтверждение пароля</label>
                    <input type="password" @bind="confirmPassword" class="form-control" placeholder="Подтвердите новый пароль" />
                </div>

                <button class="btn btn-success w-100 mb-3" @onclick="ResetPassword" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Сменить пароль
                </button>
            }

            <div class="text-center">
                <a href="/auth/login" class="btn btn-link p-0">
                    ← Вернуться к входу
                </a>
            </div>
        </div>
    </div>
</div>

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@if (showSuccess)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Успех!</strong> Пароль успешно изменен.
        <button type="button" class="btn-close" @onclick="DismissSuccess"></button>
    </div>
}

@code {
    private string email = string.Empty;
    private string verificationCode = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private bool isLoading = false;
    private bool codeSent = false;
    private bool showError = false;
    private bool showSuccess = false;
    private string errorMessage = string.Empty;

    private async Task SendCode()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Введите email";
            showError = true;
            return;
        }

        isLoading = true;
        var result = await AuthService.RequestPasswordResetAsync(email);

        if (result)
        {
            codeSent = true;
        }
        else
        {
            errorMessage = "Пользователь с таким email не найден";
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private async Task ResetPassword()
    {
        if (newPassword != confirmPassword)
        {
            errorMessage = "Пароли не совпадают";
            showError = true;
            return;
        }

        if (string.IsNullOrWhiteSpace(verificationCode))
        {
            errorMessage = "Введите код подтверждения";
            showError = true;
            return;
        }

        isLoading = true;
        var result = await AuthService.ResetPasswordAsync(email, newPassword);

        if (result)
        {
            showSuccess = true;
            await Task.Delay(2000);
            Navigation.NavigateTo("/auth/login", forceLoad: true);
        }
        else
        {
            errorMessage = "Ошибка при смене пароля";
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/auth/login", forceLoad: true);
    }

    private void DismissError()
    {
        showError = false;
    }

    private void DismissSuccess()
    {
        showSuccess = false;
    }
}