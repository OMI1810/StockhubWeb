@page "/auth/register"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-user-plus me-2"></i>Регистрация</h2>
            <p class="text-muted">Создайте новый аккаунт</p>
        </div>

        <div class="auth-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Имя *</label>
                        <input @bind="registerModel.FirstName" @oninput='() => ClearFieldError("firstName")'
                               class="form-control @(GetFieldClass("firstName"))"
                               placeholder="Введите имя" />
                        @if (fieldErrors.ContainsKey("firstName"))
                        {
                            <div class="form-text text-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                @string.Join(" ", fieldErrors["firstName"])
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Фамилия *</label>
                        <input @bind="registerModel.LastName" @oninput='() => ClearFieldError("lastName")'
                               class="form-control @(GetFieldClass("lastName"))"
                               placeholder="Введите фамилию" />
                        @if (fieldErrors.ContainsKey("lastName"))
                        {
                            <div class="form-text text-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                @string.Join(" ", fieldErrors["lastName"])
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Отчество</label>
                <input @bind="registerModel.MiddleName" @oninput='() => ClearFieldError("middleName")'
                       class="form-control @(GetFieldClass("middleName"))"
                       placeholder="Введите отчество (необязательно)" />
                @if (fieldErrors.ContainsKey("middleName"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["middleName"])
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Email *</label>
                <input type="email" @bind="registerModel.Email" @oninput='() => ClearFieldError("email")'
                       class="form-control @(GetFieldClass("email"))"
                       placeholder="Введите email" />
                @if (fieldErrors.ContainsKey("email"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["email"])
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль *</label>
                <input type="password" @bind="registerModel.Password" @oninput='() => ClearFieldError("password")'
                       class="form-control @(GetFieldClass("password"))"
                       placeholder="Введите пароль (минимум 8 символов)" />
                @if (fieldErrors.ContainsKey("password"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["password"])
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Подтверждение пароля *</label>
                <input type="password" @bind="registerModel.PasswordRepeat" @oninput='() => ClearFieldError("passwordRepeat")'
                       class="form-control @(GetFieldClass("passwordRepeat"))"
                       placeholder="Повторите пароль" />
                @if (fieldErrors.ContainsKey("passwordRepeat"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["passwordRepeat"])
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(generalError))
            {
                <div class="alert alert-danger">
                    @generalError
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">
                    @successMessage
                </div>
            }

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Регистрация...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformRegistration">
                    Зарегистрироваться
                </button>
            }

            <div class="text-center">
                <span class="text-muted">Уже есть аккаунт? </span>
                <a href="/auth/login" class="btn btn-link p-0">
                    Войти в систему
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <button class="btn btn-link p-0" @onclick="GoBack">
                    ← Вернуться на главную
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new();
    private bool isLoading = false;
    private string generalError = string.Empty;
    private string successMessage = string.Empty;

    // Ошибки валидации от сервера
    private Dictionary<string, List<string>> fieldErrors = new();

    protected override void OnInitialized()
    {
        CheckAuthentication();
    }

    private string GetFieldClass(string fieldName)
    {
        return fieldErrors.ContainsKey(fieldName) ? "border-danger" : "";
    }

    private void ClearFieldError(string field)
    {
        if (fieldErrors.ContainsKey(field))
        {
            fieldErrors.Remove(field);
            StateHasChanged();
        }
    }

    private void ClearGeneralError()
    {
        if (!string.IsNullOrEmpty(generalError))
        {
            generalError = string.Empty;
            StateHasChanged();
        }
    }

    private void ClearSuccessMessage()
    {
        if (!string.IsNullOrEmpty(successMessage))
        {
            successMessage = string.Empty;
            StateHasChanged();
        }
    }

    private void ClearAllErrors()
    {
        fieldErrors.Clear();
        generalError = string.Empty;
        successMessage = string.Empty;
        StateHasChanged();
    }

    private async void CheckAuthentication()
    {
        try
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (isAuthenticated)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка проверки аутентификации: {ex.Message}");
        }
    }

    private async Task PerformRegistration()
    {
        if (string.IsNullOrWhiteSpace(registerModel.FirstName) ||
            string.IsNullOrWhiteSpace(registerModel.LastName) ||
            string.IsNullOrWhiteSpace(registerModel.Email) ||
            string.IsNullOrWhiteSpace(registerModel.Password) ||
            string.IsNullOrWhiteSpace(registerModel.PasswordRepeat))
        {
            generalError = "Заполните все обязательные поля";
            return;
        }

        if (registerModel.Password != registerModel.PasswordRepeat)
        {
            generalError = "Пароли не совпадают";
            return;
        }

        isLoading = true;
        ClearAllErrors();
        StateHasChanged();

        try
        {
            var result = await AuthService.RegisterAsync(registerModel);

            if (result.Success)
            {
                successMessage = result.Data?.Message ?? "Регистрация прошла успешно! Проверьте вашу почту для подтверждения email.";

                // Очищаем форму после успешной регистрации
                registerModel = new RegisterModel();

                // Автоматический переход на страницу подтверждения email через 3 секунды
                await Task.Delay(3000);
                Navigation.NavigateTo("/auth/email-confirmation");
            }
            else
            {
                // Обрабатываем ошибки от сервера
                HandleApiErrors(result);
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка регистрации: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }

    private void HandleApiErrors(ApiResponse<AuthResponse> result)
    {
        if (result.Errors != null && result.Errors.Any())
        {
            // Распределяем ошибки по полям на основе текста ошибки
            foreach (var error in result.Errors)
            {
                var errorLower = error.ToLower();

                if (errorLower.Contains("firstname") || errorLower.Contains("имя") || errorLower.Contains("firstName"))
                {
                    AddFieldError("firstName", error);
                }
                else if (errorLower.Contains("lastname") || errorLower.Contains("фамилия") || errorLower.Contains("lastName"))
                {
                    AddFieldError("lastName", error);
                }
                else if (errorLower.Contains("middlename") || errorLower.Contains("отчество") || errorLower.Contains("middleName"))
                {
                    AddFieldError("middleName", error);
                }
                else if (errorLower.Contains("email") || errorLower.Contains("емейл") || errorLower.Contains("почт"))
                {
                    AddFieldError("email", error);
                }
                else if (errorLower.Contains("password") && errorLower.Contains("repeat") ||
                         errorLower.Contains("парол") && errorLower.Contains("совпад"))
                {
                    AddFieldError("passwordRepeat", error);
                }
                else if (errorLower.Contains("password") || errorLower.Contains("парол"))
                {
                    AddFieldError("password", error);
                }
                else
                {
                    generalError = error;
                }
            }
        }
        else if (!string.IsNullOrEmpty(result.Message))
        {
            generalError = result.Message;
        }
        else
        {
            generalError = "Произошла неизвестная ошибка при регистрации";
        }
    }

    private void AddFieldError(string field, string error)
    {
        if (!fieldErrors.ContainsKey(field))
        {
            fieldErrors[field] = new List<string>();
        }
        fieldErrors[field].Add(error);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}