@page "/auth/register"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-user-plus me-2"></i>Регистрация</h2>
            <p class="text-muted">Создайте аккаунт для работы с системой</p>
        </div>

        <div class="auth-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Имя *</label>
                        <input @bind="registerModel.FirstName" class="form-control" placeholder="Введите имя" />
                        @if (HasValidationError("FirstName"))
                        {
                            <div class="text-danger small">@GetValidationError("FirstName")</div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Фамилия *</label>
                        <input @bind="registerModel.LastName" class="form-control" placeholder="Введите фамилию" />
                        @if (HasValidationError("LastName"))
                        {
                            <div class="text-danger small">@GetValidationError("LastName")</div>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" @bind="hasNoMiddleName" />
                    <label class="form-check-label">Нет отчества</label>
                </div>
            </div>

            @if (!hasNoMiddleName)
            {
                <div class="mb-3">
                    <label class="form-label">Отчество</label>
                    <input @bind="registerModel.MiddleName" class="form-control" placeholder="Введите отчество" />
                </div>
            }

            <div class="mb-3">
                <label class="form-label">Email *</label>
                <input type="email" @bind="registerModel.Email" class="form-control" placeholder="Введите email" />
                @if (HasValidationError("Email"))
                {
                    <div class="text-danger small">@GetValidationError("Email")</div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль *</label>
                <input type="password" @bind="registerModel.Password" class="form-control"
                       placeholder="Введите пароль" />
                @if (HasValidationError("Password"))
                {
                    <div class="text-danger small">@GetValidationError("Password")</div>
                }
                <small class="form-text text-muted">
                    Пароль будет проверен на стороне сервера
                </small>
            </div>

            <div class="mb-3">
                <label class="form-label">Подтверждение пароля *</label>
                <input type="password" @bind="registerModel.ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                @if (HasValidationError("ConfirmPassword"))
                {
                    <div class="text-danger small">@GetValidationError("ConfirmPassword")</div>
                }
            </div>

            <!-- Тумблер организатора -->
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" @bind="isOrganizer" />
                    <label class="form-check-label">
                        <strong>Стать организатором</strong>
                    </label>
                </div>
                <small class="form-text text-muted">
                    Организаторы могут создавать организации, управлять складами и приглашать сотрудников
                </small>
            </div>

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Регистрация...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformRegistration">
                    @if (isOrganizer)
                    {
                        <text>Зарегистрироваться как организатор</text>
                    }
                    else
                    {
                        <text>Зарегистрироваться</text>
                    }
                </button>
            }

            <div class="text-center">
                <span class="text-muted">Уже есть аккаунт организатора? </span>
                <a href="/auth/login" class="btn btn-link p-0">
                    Войти в систему
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <button class="btn btn-link p-0" @onclick="GoBack">
                    ← Вернуться на главную
                </button>
            </div>
        </div>
    </div>
</div>

@if (showSuccess)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Успех!</strong> @successMessage
        <button type="button" class="btn-close" @onclick="DismissSuccess"></button>
    </div>
}

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@code {
    private RegisterModel registerModel = new();
    private bool isLoading = false;
    private bool showError = false;
    private bool showSuccess = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool hasNoMiddleName = false;
    private bool isOrganizer = false;
    private Dictionary<string, string> validationErrors = new();

    protected override void OnInitialized()
    {
        CheckAuthentication();
    }

    private async void CheckAuthentication()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            var user = await AuthService.GetCurrentUserAsync();
            if (user?.Role == UserRole.Organizer)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
        }
    }

    private async Task PerformRegistration()
    {
        if (!ValidateForm())
            return;

        isLoading = true;
        showError = false;
        showSuccess = false;

        // Устанавливаем роль на основе тумблера
        registerModel.Role = isOrganizer ? UserRole.Organizer : UserRole.Employee;
        registerModel.HasMiddleName = !hasNoMiddleName;

        if (hasNoMiddleName)
        {
            registerModel.MiddleName = null;
        }

        try
        {
            // Отправляем данные на сервер для регистрации
            var result = await AuthService.RegisterUserAsync(registerModel);

            if (result)
            {
                if (isOrganizer)
                {
                    // Редирект на создание организации для организаторов
                    Navigation.NavigateTo("/dashboard/organization/create");
                }
                else
                {
                    // Сообщение об успехе для сотрудников
                    successMessage = "Вы успешно зарегистрировались! Ожидайте приглашения в организацию.";
                    showSuccess = true;

                    // Автоматический редирект на главную через 3 секунды
                    await Task.Delay(3000);
                    Navigation.NavigateTo("/");
                }
            }
            else
            {
                errorMessage = "Не удалось зарегистрироваться. Возможно, пользователь с таким email уже существует.";
                showError = true;
            }
        }
        catch (Exception ex)
        {
            // Обработка ошибок от бэкенда
            errorMessage = $"Ошибка регистрации: {ex.Message}";
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private bool ValidateForm()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(registerModel.FirstName))
        {
            validationErrors["FirstName"] = "Введите имя";
        }
        else if (registerModel.FirstName.Length < 2)
        {
            validationErrors["FirstName"] = "Имя должно содержать минимум 2 символа";
        }

        if (string.IsNullOrWhiteSpace(registerModel.LastName))
        {
            validationErrors["LastName"] = "Введите фамилию";
        }
        else if (registerModel.LastName.Length < 2)
        {
            validationErrors["LastName"] = "Фамилия должна содержать минимум 2 символа";
        }

        if (string.IsNullOrWhiteSpace(registerModel.Email))
        {
            validationErrors["Email"] = "Введите email";
        }
        else if (!Utiles.IsValidEmail(registerModel.Email))
        {
            validationErrors["Email"] = "Введите корректный email адрес";
        }

        if (string.IsNullOrWhiteSpace(registerModel.Password))
        {
            validationErrors["Password"] = "Введите пароль";
        }

        if (string.IsNullOrWhiteSpace(registerModel.ConfirmPassword))
        {
            validationErrors["ConfirmPassword"] = "Подтвердите пароль";
        }
        else if (registerModel.Password != registerModel.ConfirmPassword)
        {
            validationErrors["ConfirmPassword"] = "Пароли не совпадают";
        }

        return validationErrors.Count == 0;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private void DismissError()
    {
        showError = false;
    }

    private void DismissSuccess()
    {
        showSuccess = false;
    }

    private bool HasValidationError(string fieldName)
    {
        return validationErrors.ContainsKey(fieldName);
    }

    private string GetValidationError(string fieldName)
    {
        return validationErrors.ContainsKey(fieldName) ? validationErrors[fieldName] : string.Empty;
    }
}
