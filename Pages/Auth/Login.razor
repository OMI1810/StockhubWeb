@page "/auth/login"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-sign-in-alt me-2"></i>Вход в систему</h2>
            <p class="text-muted">Войдите в свой аккаунт</p>
        </div>

        <div class="auth-body">
            <!-- Поле Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" @bind="email" @oninput="OnEmailInput"
                       class="form-control @(GetFieldClass("email"))"
                       placeholder="Введите ваш email" />

                @if (fieldErrors.ContainsKey("email"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["email"])
                    </div>
                }
            </div>

            <!-- Поле Пароль -->
            <div class="mb-3">
                <label class="form-label">Пароль</label>
                <input type="password" @bind="password" @oninput="OnPasswordInput"
                       class="form-control @(GetFieldClass("password"))"
                       placeholder="Введите пароль" />

                @if (fieldErrors.ContainsKey("password"))
                {
                    <div class="form-text text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        @string.Join(" ", fieldErrors["password"])
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(generalError))
            {
                <div class="alert alert-danger">
                    @generalError
                </div>
            }

            <div class="mb-3 text-end">
                <a href="/auth/forgot-password" class="btn btn-link p-0 text-decoration-none">
                    <i class="fas fa-key me-1"></i>
                    Забыли пароль?
                </a>
            </div>

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Вход...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformLogin">
                    Войти
                </button>
            }

            <div class="text-center">
                <span class="text-muted">Нет аккаунта? </span>
                <a href="/auth/register" class="btn btn-link p-0">
                    Зарегистрироваться
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <button class="btn btn-link p-0" @onclick="GoBack">
                    ← Вернуться на главную
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;
    private string generalError = string.Empty;

    // Ошибки валидации от сервера
    private Dictionary<string, List<string>> fieldErrors = new();

    protected override void OnInitialized()
    {
        CheckAuthentication();
    }

    private string GetFieldClass(string fieldName)
    {
        return fieldErrors.ContainsKey(fieldName) ? "border-danger" : "";
    }

    private void OnEmailInput(ChangeEventArgs e)
    {
        email = e.Value?.ToString() ?? string.Empty;
        ClearFieldError("email");
        ClearGeneralError();
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        password = e.Value?.ToString() ?? string.Empty;
        ClearFieldError("password");
        ClearGeneralError();
    }

    private void ClearFieldError(string field)
    {
        if (fieldErrors.ContainsKey(field))
        {
            fieldErrors.Remove(field);
            StateHasChanged();
        }
    }

    private void ClearGeneralError()
    {
        if (!string.IsNullOrEmpty(generalError))
        {
            generalError = string.Empty;
            StateHasChanged();
        }
    }

    private void ClearAllErrors()
    {
        fieldErrors.Clear();
        generalError = string.Empty;
        StateHasChanged();
    }

    private async void CheckAuthentication()
    {
        try
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (isAuthenticated)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка проверки аутентификации: {ex.Message}");
        }
    }

    private async Task PerformLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            generalError = "Заполните все поля";
            return;
        }

        isLoading = true;
        ClearAllErrors();
        StateHasChanged();

        var loginModel = new LoginModel
        {
            Email = email,
            Password = password
        };

        try
        {
            var result = await AuthService.LoginAsync(loginModel);

            if (result.Success && result.Data?.User != null)
            {
                Navigation.NavigateTo("/dashboard/organization/manage", true);
            }
            else
            {
                // Обрабатываем ошибки от сервера
                HandleApiErrors(result);
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка входа: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }

    private void HandleApiErrors(ApiResponse<AuthResponse> result)
    {
        if (result.Errors != null && result.Errors.Any())
        {
            // Распределяем ошибки по полям
            foreach (var error in result.Errors)
            {
                if (error.ToLower().Contains("email") || error.ToLower().Contains("емейл") || error.ToLower().Contains("почт"))
                {
                    AddFieldError("email", error);
                }
                else if (error.ToLower().Contains("password") || error.ToLower().Contains("парол"))
                {
                    AddFieldError("password", error);
                }
                else
                {
                    generalError = error;
                }
            }
        }
        else if (!string.IsNullOrEmpty(result.Message))
        {
            generalError = result.Message;
        }
        else
        {
            generalError = "Произошла неизвестная ошибка";
        }
    }

    private void AddFieldError(string field, string error)
    {
        if (!fieldErrors.ContainsKey(field))
        {
            fieldErrors[field] = new List<string>();
        }
        fieldErrors[field].Add(error);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}