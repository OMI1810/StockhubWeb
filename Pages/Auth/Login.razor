@* Login.razor *@
@page "/auth/login"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-sign-in-alt me-2"></i>Вход в систему</h2>
            <p class="text-muted">Вход доступен только для организаторов</p>
        </div>

        <div class="auth-body">
            <div class="alert alert-warning mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Внимание!</strong> Веб-версия доступна только для организаторов.
                Сотрудники могут войти через мобильное приложение.
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" @bind="email" class="form-control" placeholder="Введите ваш email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль</label>
                <input type="password" @bind="password" class="form-control" placeholder="Введите пароль" />
            </div>

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Вход...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformLogin">
                    Войти как организатор
                </button>
            }

            <div class="text-center">
                <span class="text-muted">Нет аккаунта организатора? </span>
                <a href="/auth/register" class="btn btn-link p-0">
                    Зарегистрироваться
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <button class="btn btn-link p-0" @onclick="GoBack">
                    ← Вернуться на главную
                </button>
            </div>
        </div>
    </div>
</div>

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;
    private bool showError = false;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        CheckAuthentication();
    }

    private async void CheckAuthentication()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            var user = await AuthService.GetCurrentUserAsync();
            if (user?.Role == UserRole.Organizer)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
            else
            {
                // Если пользователь сотрудник, показываем сообщение
                ShowEmployeeMessage();
            }
        }
    }

    private async Task PerformLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Введите email и пароль";
            showError = true;
            return;
        }

        isLoading = true;
        showError = false;

        var loginModel = new LoginModel
        {
            Email = email,
            Password = password
        };

        var result = await AuthService.LoginUserAsync(loginModel);

        if (result)
        {
            var user = await AuthService.GetCurrentUserAsync();
            if (user?.Role == UserRole.Organizer)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
            else
            {
                // Пользователь сотрудник - показываем сообщение и разлогиниваем
                await AuthService.LogoutAsync();
                ShowEmployeeMessage();
            }
        }
        else
        {
            errorMessage = "Неверный email или пароль";
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private void ShowEmployeeMessage()
    {
        errorMessage = "Доступ к веб-версии разрешен только организаторам. Сотрудники могут войти через мобильное приложение.";
        showError = true;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private void DismissError()
    {
        showError = false;
    }
}