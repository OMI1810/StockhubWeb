@* Login.razor *@
@page "/auth/login"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.InvoiceService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-sign-in-alt me-2"></i>Вход в систему</h2>
            <p class="text-muted">Войдите как организатор или сотрудник</p>
        </div>

        <div class="auth-body">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" @bind="email" class="form-control" placeholder="Введите ваш email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль</label>
                <input type="password" @bind="password" class="form-control" placeholder="Введите пароль" />
            </div>

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Вход...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformLogin">
                    Войти
                </button>
            }

            <div class="alert alert-info">
                <small>
                    <i class="fas fa-info-circle me-1"></i>
                    <strong>Организаторы:</strong> управляют организациями и складами<br>
                    <strong>Сотрудники:</strong> работают со складами по приглашениям
                </small>
            </div>

            <div class="text-center">
                <span class="text-muted">Нет аккаунта организатора? </span>
                <a href="/auth/register" class="btn btn-link p-0">
                    Зарегистрироваться
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <button class="btn btn-link p-0" @onclick="GoBack">
                    ← Вернуться на главную
                </button>
            </div>
        </div>
    </div>
</div>

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> Неверный email или пароль.
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;
    private bool showError = false;

    protected override void OnInitialized()
    {
        CheckAuthentication();
    }

    private async void CheckAuthentication()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            var user = await AuthService.GetCurrentUserAsync();
            RedirectToDashboard(user);
        }
    }

    private async Task PerformLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            showError = true;
            return;
        }

        isLoading = true;
        showError = false;

        var loginModel = new LoginModel
        {
            Email = email,
            Password = password
        };

        var result = await AuthService.LoginUserAsync(loginModel);

        if (result)
        {
            var user = await AuthService.GetCurrentUserAsync();
            RedirectToDashboard(user);
        }
        else
        {
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private void RedirectToDashboard(User? user)
    {
        if (user?.Role == UserRole.Organizer)
        {
            Navigation.NavigateTo("/dashboard/organization/manage");
        }
        else
        {
            Navigation.NavigateTo("/dashboard/employee");
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private void DismissError()
    {
        showError = false;
    }
}