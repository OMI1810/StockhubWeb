@page "/dashboard/warehouses/{warehouseId}"
@using Microsoft.JSInterop
@using StockhubWeb.Models
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.WarehouseService
@using StockhubWeb.Services.InvoiceService
@inject IAuthService AuthService
@inject IWarehouseService WarehouseService
@inject IInvoiceService InvoiceService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    @if (warehouse != null)
    {
        <!-- Заголовок склада с вертикальными кнопками -->
        <div class="d-flex justify-content-between align-items-start mb-4 header-layout-responsive">
            <div class="warehouse-info-responsive flex-grow-1 me-md-4">
                <h2 class="warehouse-title-responsive text-primary">
                    <i class="fas fa-warehouse me-2"></i>
                    @warehouse.Name
                </h2>
                <div class="warehouse-subtitle-responsive text-muted">
                    <span class="badge @(warehouse.IsActive ? "bg-success" : "bg-warning") me-2 warehouse-badge-responsive">
                        @(warehouse.IsActive ? "Активен" : "Неактивен")
                    </span>
                    <small>Товаров: @products.Count</small>
                    @if (!string.IsNullOrEmpty(warehouse.Address))
                    {
                        <div class="mt-1">
                            <small><strong>@warehouse.City, @warehouse.Address</strong></small>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(warehouse.Region) || !string.IsNullOrEmpty(warehouse.Country))
                    {
                        <div class="mt-1">
                            <small>
                                @if (!string.IsNullOrEmpty(warehouse.Region))
                                {
                                    <text>@warehouse.Region</text>
                                }
                                @if (!string.IsNullOrEmpty(warehouse.Region) && !string.IsNullOrEmpty(warehouse.Country))
                                {
                                    <text>, </text>
                                }
                                @if (!string.IsNullOrEmpty(warehouse.Country))
                                {
                                    <text>@warehouse.Country</text>
                                }
                                @if (!string.IsNullOrEmpty(warehouse.PostalCode))
                                {
                                    <text> (@warehouse.PostalCode)</text>
                                }
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="header-actions-vertical flex-shrink-0">
            <div class="btn-vertical-group">
                <button class="btn btn-info btn-responsive" @onclick="ShowInvoicePdf">
                    <i class="fas fa-file-alt me-2"></i>
                    <span>Документ остатков</span>
                </button>
                <button class="btn btn-success btn-responsive" @onclick="ShowCreateOrderModal">
                    <i class="fas fa-shopping-cart me-2"></i>
                    <span>Создать заказ</span>
                </button>
                <button class="btn btn-outline-secondary btn-responsive" @onclick="GoBack">
                    <i class="fas fa-arrow-left me-2"></i>
                    <span>Назад к организациям</span>
                </button>
            </div>
        </div>
       

        <!-- Навигация по вкладкам -->
        <ul class="nav nav-tabs mb-4 nav-tabs-responsive">
            <li class="nav-item">
                <a class="nav-link @(activeTab == "products" ? "active" : "")"
                   @onclick='() => SwitchTab("products")'>
                    <i class="fas fa-boxes me-1"></i>
                    <span class="d-none d-sm-inline">Товары</span>
                    <span class="d-sm-none">Тов.</span>
                    (@products.Count)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(activeTab == "transfers" ? "active" : "")"
                   @onclick='() => SwitchTab("transfers")'>
                    <i class="fas fa-exchange-alt me-1"></i>
                    <span class="d-none d-sm-inline">История перемещений</span>
                    <span class="d-sm-none">Перемещ.</span>
                    (@transfers.Count)
                </a>
            </li>
        </ul>

        @if (activeTab == "products")
        {
            <!-- Вкладка товаров -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0 card-header-responsive">
                        <i class="fas fa-boxes me-2"></i>
                        Товары на складе
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (products.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                            <p class="text-muted text-adaptive-md">Товары не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-adaptive-sm">Название</th>
                                        <th class="text-adaptive-sm">Категория</th>
                                        <th class="text-adaptive-sm">Количество</th>
                                        <th class="text-adaptive-sm">Цена</th>
                                        <th class="text-adaptive-sm">Общая стоимость</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in products)
                                    {
                                        <tr>
                                            <td>
                                                <div class="text-adaptive-sm">
                                                    <strong>@product.Name</strong>
                                                    @if (!string.IsNullOrEmpty(product.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@product.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary text-adaptive-sm">@product.Category</span>
                                            </td>
                                            <td>
                                                <span class="@GetQuantityClass(product.Quantity) fw-bold text-adaptive-sm">
                                                    @product.Quantity
                                                </span>
                                            </td>
                                            <td class="text-adaptive-sm">@product.Price.ToString("C")</td>
                                            <td>
                                                <strong class="text-success text-adaptive-sm">
                                                    @((product.Quantity * product.Price).ToString("C"))
                                                </strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
        else if (activeTab == "transfers")
        {
            <!-- Вкладка истории перемещений -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0 card-header-responsive">
                        <i class="fas fa-exchange-alt me-2"></i>
                        История перемещений товаров
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (transfers.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted text-adaptive-md">Перемещения не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-adaptive-sm">Дата</th>
                                        <th class="text-adaptive-sm">Товар</th>
                                        <th class="text-adaptive-sm">Откуда</th>
                                        <th class="text-adaptive-sm">Куда</th>
                                        <th class="text-adaptive-sm">Количество</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in transfers)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted text-adaptive-sm">
                                                    @transfer.TransferDate.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <strong class="text-adaptive-sm">@transfer.ProductName</strong>
                                            </td>
                                            <td>
                                                <span class="text-muted text-adaptive-sm">@transfer.FromWarehouseName</span>
                                            </td>
                                            <td>
                                                <span class="text-muted text-adaptive-sm">@transfer.ToWarehouseName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-adaptive-sm">@transfer.Quantity</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <h4 class="text-adaptive-lg">Склад не найден</h4>
            <p class="text-adaptive-md">Запрашиваемый склад не существует или у вас нет к нему доступа.</p>
            <button class="btn btn-primary btn-responsive-lg" @onclick="GoBack">
                Вернуться назад
            </button>
        </div>
    }
</div>

<!-- Модальное окно PDF накладной -->
@if (showInvoiceModal)
{
    <div class="modal show d-block pdf-viewer-modal" tabindex="-1" style="background-color: rgba(0,0,0,0.8);">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-adaptive-md">
                        <i class="fas fa-file-pdf me-2"></i>
                        Остатки склада - @warehouse?.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseInvoiceModal"></button>
                </div>
                <div class="modal-body">
                    @if (isLoadingInvoice)
                    {
                        <div class="pdf-loading">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Загрузка...</span>
                            </div>
                            <p class="text-adaptive-md">Генерация PDF накладной...</p>
                        </div>
                    }
                    else if (showError)
                    {
                        <div class="pdf-error">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h5 class="text-adaptive-lg">Ошибка загрузки накладной</h5>
                            <p class="text-adaptive-md">@errorMessage</p>
                            <button class="btn btn-primary mt-2 btn-responsive" @onclick="CloseInvoiceModal">
                                Закрыть
                            </button>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(pdfBase64))
                    {
                        <iframe src="data:application/pdf;base64,@pdfBase64"
                                style="width: 100%; height: 100%;"
                                frameborder="0">
                            Ваш браузер не поддерживает отображение PDF.
                            <a href="data:application/pdf;base64,@pdfBase64" download="накладная.pdf">
                                Скачайте файл
                            </a>
                        </iframe>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

<!-- Модальное окно создания заказа -->
@if (showCreateOrderModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-adaptive-lg">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Создание заказа
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateOrderModal"></button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <!-- Выбор склада -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Выберите склад *</label>
                        <select @bind="selectedInternalWarehouse" class="form-select">
                            <option value="">Выберите склад...</option>
                            @foreach (var wh in organizationWarehouses)
                            {
                                <option value="@wh.Id">@wh.Name - @wh.City, @wh.Address</option>
                            }
                        </select>
                    </div>

                    <!-- Поля для товаров с прокруткой -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Товары в заказе</label>
                        <div style="max-height: 300px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 0.375rem; padding: 1rem;">

                            @for (int i = 0; i < orderItems.Count; i++)
                            {
                                var index = i;
                                <div class="card mb-2">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <label class="form-label">Название товара *</label>
                                                <input @bind="orderItems[index].ProductName" class="form-control"
                                                       placeholder="Введите название товара" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Количество *</label>
                                                <input type="number" @bind="orderItems[index].Quantity"
                                                       class="form-control" placeholder="0" min="1" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Цена за единицу</label>
                                                <input type="number" @bind="orderItems[index].Price"
                                                       class="form-control" placeholder="0.00" step="0.01" />
                                            </div>
                                            <div class="col-md-1">
                                                <label class="form-label">&nbsp;</label>
                                                <button class="btn btn-outline-danger w-100"
                                                        @onclick="@(() => RemoveOrderItem(index))"
                                                        title="Удалить товар">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (orderItems.Count == 0)
                            {
                                <div class="text-center py-3 text-muted">
                                    <i class="fas fa-box-open fa-2x mb-2"></i>
                                    <p>Добавьте товары в заказ</p>
                                </div>
                            }
                        </div>

                        <button class="btn btn-outline-primary btn-sm mt-2" @onclick="AddOrderItem">
                            <i class="fas fa-plus me-1"></i>
                            Добавить товар
                        </button>
                    </div>

                    <!-- Дополнительная информация -->
                    <div class="mb-3">
                        <label class="form-label">Примечания к заказу</label>
                        <textarea @bind="orderNotes" class="form-control" rows="3"
                                  placeholder="Дополнительная информация о заказе..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-responsive" @onclick="CloseCreateOrderModal">Отмена</button>
                    <button type="button" class="btn btn-primary btn-responsive" @onclick="CreateOrder" disabled="@(!IsOrderValid())">
                        <i class="fas fa-check me-1"></i>
                        Создать заказ
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    [Parameter]
    public string WarehouseId { get; set; } = string.Empty;

    private Warehouse? warehouse;
    private List<Product> products = new();
    private List<ProductTransfer> transfers = new();
    private string activeTab = "products";

    // Для накладной
    private bool showInvoiceModal = false;
    private bool isLoadingInvoice = false;
    private bool showError = false;
    private string errorMessage = string.Empty;
    private string pdfBase64 = string.Empty;

    // Для модального окна заказа
    private bool showCreateOrderModal = false;
    private string orderWarehouseType = "internal";
    private string selectedInternalWarehouse = string.Empty;
    private string externalWarehouseAddress = string.Empty;
    private string orderNotes = string.Empty;
    private List<OrderItem> orderItems = new();
    private List<Warehouse> organizationWarehouses = new();

    public class OrderItem
    {
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; } = 1;
        public decimal Price { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadWarehouseData();
    }

    private async Task LoadWarehouseData()
    {
        if (!string.IsNullOrEmpty(WarehouseId))
        {
            try
            {
                warehouse = await WarehouseService.GetWarehouseAsync(WarehouseId);
                if (warehouse != null)
                {
                    products = await WarehouseService.GetWarehouseProductsAsync(WarehouseId);
                    transfers = await WarehouseService.GetProductTransfersAsync(WarehouseId);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Ошибка загрузки данных склада: {ex.Message}");
            }
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/dashboard/organization/manage");
    }

    private string GetQuantityClass(int quantity)
    {
        return quantity switch
        {
            0 => "text-danger",
            < 10 => "text-warning",
            _ => "text-success"
        };
    }

    private void SwitchTab(string tabName)
    {
        activeTab = tabName;
        StateHasChanged();
    }

    // Методы для работы с накладной
    private async Task ShowInvoicePdf()
    {
        if (warehouse == null) return;

        showInvoiceModal = true;
        isLoadingInvoice = true;
        showError = false;
        errorMessage = string.Empty;
        pdfBase64 = string.Empty;

        StateHasChanged();

        try
        {
            var pdfBytes = await InvoiceService.GenerateInvoicePdfAsync(warehouse);
            pdfBase64 = Convert.ToBase64String(pdfBytes);
        }
        catch (Exception ex)
        {
            showError = true;
            errorMessage = ex.Message;
            Console.WriteLine($"Ошибка при генерации PDF накладной: {ex.Message}");
        }

        isLoadingInvoice = false;
        StateHasChanged();
    }

    private void CloseInvoiceModal()
    {
        showInvoiceModal = false;
        pdfBase64 = string.Empty;
        showError = false;
        errorMessage = string.Empty;
    }

    // Методы для модального окна заказа
    private void ShowCreateOrderModal()
    {
        showCreateOrderModal = true;
    }

    private void CloseCreateOrderModal()
    {
        showCreateOrderModal = false;
    }

    private void CreateOrder()
    {
        // Логика создания заказа
        showCreateOrderModal = false;
    }

    private void AddOrderItem()
    {
        orderItems.Add(new OrderItem());
        StateHasChanged();
    }

    private bool IsOrderValid()
    {
        // Проверяем, что выбран склад и есть хотя бы один товар с названием и количеством
        return !string.IsNullOrEmpty(selectedInternalWarehouse) &&
               orderItems.Any(item =>
                   !string.IsNullOrWhiteSpace(item.ProductName) &&
                   item.Quantity > 0);
    }

    private void RemoveOrderItem(int index)
    {
        if (orderItems.Count > 1)
        {
            orderItems.RemoveAt(index);
            StateHasChanged();
        }
    }
}