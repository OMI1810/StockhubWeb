@page "/dashboard/warehouses/{warehouseId}"
@using Microsoft.JSInterop
@using StockhubWeb.Models
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.WarehouseService
@using StockhubWeb.Services.InvoiceService
@inject IAuthService AuthService
@inject IWarehouseService WarehouseService
@inject IInvoiceService InvoiceService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    @if (warehouse != null)
    {
        <!-- Заголовок склада -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="fas fa-warehouse me-2 text-primary"></i>
                    @warehouse?.Name
                </h2>
                <div class="text-muted">
                    <span class="badge @(warehouse.IsActive ? "bg-success" : "bg-warning") me-2">
                        @(warehouse.IsActive ? "Активен" : "Неактивен")
                    </span>
                    <small>Товаров: @products.Count</small>
                </div>
            </div>
            <div>
                <button class="btn btn-info me-2" @onclick="ShowInvoicePdf">
                    <i class="fas fa-file-alt me-1"></i>
                    Документ остатков
                </button>
                <button class="btn btn-success me-2" @onclick="ShowCreateOrderModal">
                    <i class="fas fa-shopping-cart me-1"></i>
                    Документ заказа
                </button>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="fas fa-arrow-left me-1"></i>
                    Назад
                </button>
            </div>
        </div>

        <!-- Навигация по вкладкам -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link @(activeTab == "products" ? "active" : "")"
                   @onclick='() => SwitchTab("products")'>
                    <i class="fas fa-boxes me-1"></i>
                    Товары (@products.Count)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(activeTab == "transfers" ? "active" : "")"
                   @onclick='() => SwitchTab("transfers")'>
                    <i class="fas fa-exchange-alt me-1"></i>
                    История перемещений (@transfers.Count)
                </a>
            </li>
        </ul>

        @if (activeTab == "products")
        {
            <!-- Вкладка товаров -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Товары на складе</h5>
                </div>
                <div class="card-body p-0">
                    @if (products.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Товары не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Название</th>
                                        <th>Категория</th>
                                        <th>Количество</th>
                                        <th>Цена</th>
                                        <th>Общая стоимость</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in products)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@product.Name</strong>
                                                    @if (!string.IsNullOrEmpty(product.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@product.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@product.Category</span>
                                            </td>
                                            <td>
                                                <span class="@GetQuantityClass(product.Quantity) fw-bold">
                                                    @product.Quantity
                                                </span>
                                            </td>
                                            <td>@product.Price.ToString("C")</td>
                                            <td>
                                                <strong class="text-success">
                                                    @((product.Quantity * product.Price).ToString("C"))
                                                </strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
        else if (activeTab == "transfers")
        {
            <!-- Вкладка истории перемещений -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">История перемещений товаров</h5>
                </div>
                <div class="card-body p-0">
                    @if (transfers.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Перемещения не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Дата</th>
                                        <th>Товар</th>
                                        <th>Откуда</th>
                                        <th>Куда</th>
                                        <th>Количество</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in transfers)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">
                                                    @transfer.TransferDate.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <strong>@transfer.ProductName</strong>
                                            </td>
                                            <td>
                                                <span class="text-muted">@transfer.FromWarehouseName</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@transfer.ToWarehouseName</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@transfer.Quantity</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Склад не найден</h4>
            <p>Запрашиваемый склад не существует или у вас нет к нему доступа.</p>
            <button class="btn btn-primary" @onclick="GoBack">
                Вернуться назад
            </button>
        </div>
    }
</div>

<!-- Модальное окно PDF накладной -->
@if (showInvoiceModal)
{
    <div class="modal show d-block pdf-viewer-modal" tabindex="-1" style="background-color: rgba(0,0,0,0.8);">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-file-pdf me-2"></i>
                        Накладная склада - @warehouse?.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseInvoiceModal"></button>
                </div>
                <div class="modal-body">
                    @if (isLoadingInvoice)
                    {
                        <div class="pdf-loading">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Загрузка...</span>
                            </div>
                            <p>Генерация PDF накладной...</p>
                        </div>
                    }
                    else if (showError)
                    {
                        <div class="pdf-error">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h5>Ошибка загрузки накладной</h5>
                            <p>@errorMessage</p>
                            <button class="btn btn-primary mt-2" @onclick="CloseInvoiceModal">
                                Закрыть
                            </button>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(pdfBase64))
                    {
                        <iframe src="data:application/pdf;base64,@pdfBase64"
                                style="width: 100%; height: 100%;"
                                frameborder="0">
                            Ваш браузер не поддерживает отображение PDF.
                            <a href="data:application/pdf;base64,@pdfBase64" download="накладная.pdf">
                                Скачайте файл
                            </a>
                        </iframe>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@if (showCreateOrderModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Создание заказа
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateOrderModal"></button>
                </div>
                <div class="modal-body">
                    <!-- Выбор типа склада -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Тип склада *</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                   @onchange="@(() => orderWarehouseType = "internal")"
                                   checked="@(orderWarehouseType == "internal")" />
                            <label class="form-check-label">
                                Наш склад
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                   @onchange="@(() => orderWarehouseType = "external")"
                                   checked="@(orderWarehouseType == "external")" />
                            <label class="form-check-label">
                                Сторонний склад
                            </label>
                        </div>
                    </div>

                    <!-- Поля в зависимости от выбора -->
                    @if (orderWarehouseType == "internal")
                    {
                        <div class="mb-3">
                            <label class="form-label">Выберите склад *</label>
                            <select @bind="selectedInternalWarehouse" class="form-select">
                                <option value="">Выберите склад...</option>
                                @foreach (var wh in organizationWarehouses)
                                {
                                    <option value="@wh.Id">@wh.Name - @wh.City, @wh.Address</option>
                                }
                            </select>
                        </div>
                    }
                    else if (orderWarehouseType == "external")
                    {
                        <div class="mb-3">
                            <label class="form-label">Адрес стороннего склада *</label>
                            <input @bind="externalWarehouseAddress" class="form-control"
                                   placeholder="Введите полный адрес склада" />
                        </div>
                    }

                    <!-- Поля для товаров -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Товары в заказе</label>

                        @for (int i = 0; i < orderItems.Count; i++)
                        {
                            var index = i;
                            <div class="card mb-2">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label class="form-label">Название товара *</label>
                                            <input @bind="orderItems[index].ProductName" class="form-control"
                                                   placeholder="Введите название товара" />
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Количество *</label>
                                            <input type="number" @bind="orderItems[index].Quantity"
                                                   class="form-control" placeholder="0" min="1" />
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Цена за единицу</label>
                                            <input type="number" @bind="orderItems[index].Price"
                                                   class="form-control" placeholder="0.00" step="0.01" />
                                        </div>
                                        <div class="col-md-1">
                                            <label class="form-label">&nbsp;</label>
                                            <button class="btn btn-outline-danger w-100"
                                                    @onclick="@(() => RemoveOrderItem(index))">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <button class="btn btn-outline-primary btn-sm" @onclick="AddOrderItem">
                            <i class="fas fa-plus me-1"></i>
                            Добавить товар
                        </button>
                    </div>

                    <!-- Дополнительная информация -->
                    <div class="mb-3">
                        <label class="form-label">Примечания к заказу</label>
                        <textarea @bind="orderNotes" class="form-control" rows="3"
                                  placeholder="Дополнительная информация о заказе..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateOrderModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateOrder">
                        <i class="fas fa-check me-1"></i>
                        Создать заказ
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    [Parameter]
    public string WarehouseId { get; set; } = string.Empty;

    private Warehouse? warehouse;
    private List<Product> products = new();
    private List<ProductTransfer> transfers = new();
    private string activeTab = "products";

    // Для накладной
    private bool showInvoiceModal = false;
    private bool isLoadingInvoice = false;
    private bool showError = false;
    private string errorMessage = string.Empty;
    private string pdfBase64 = string.Empty;

    private bool showCreateOrderModal = false;
    private string orderWarehouseType = "internal";
    private string selectedInternalWarehouse = string.Empty;
    private string externalWarehouseAddress = string.Empty;
    private string orderNotes = string.Empty;
    private List<OrderItem> orderItems = new();
    private List<Warehouse> organizationWarehouses = new();

    public class OrderItem
    {
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; } = 1;
        public decimal Price { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadWarehouseData();
    }

    private async Task LoadWarehouseData()
    {
        if (!string.IsNullOrEmpty(WarehouseId))
        {
            try
            {
                warehouse = await WarehouseService.GetWarehouseAsync(WarehouseId);
                if (warehouse != null)
                {
                    products = await WarehouseService.GetWarehouseProductsAsync(WarehouseId);
                    transfers = await WarehouseService.GetProductTransfersAsync(WarehouseId);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Ошибка загрузки данных склада: {ex.Message}");
            }
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/dashboard/organization/manage");
    }

    private string GetQuantityClass(int quantity)
    {
        return quantity switch
        {
            0 => "text-danger",
            < 10 => "text-warning",
            _ => "text-success"
        };
    }

    private void SwitchTab(string tabName)
    {
        activeTab = tabName;
        StateHasChanged();
    }

    // Методы для работы с накладной
    private async Task ShowInvoicePdf()
    {
        if (warehouse == null) return;

        showInvoiceModal = true;
        isLoadingInvoice = true;
        showError = false;
        errorMessage = string.Empty;
        pdfBase64 = string.Empty;

        StateHasChanged();

        try
        {
            var pdfBytes = await InvoiceService.GenerateInvoicePdfAsync(warehouse);
            pdfBase64 = Convert.ToBase64String(pdfBytes);
        }
        catch (Exception ex)
        {
            showError = true;
            errorMessage = ex.Message;
            Console.WriteLine($"Ошибка при генерации PDF накладной: {ex.Message}");
        }

        isLoadingInvoice = false;
        StateHasChanged();
    }

    private void CloseInvoiceModal()
    {
        showInvoiceModal = false;
        pdfBase64 = string.Empty;
        showError = false;
        errorMessage = string.Empty;
    }

    private void ShowCreateOrderModal()
    {
        showCreateOrderModal = true;
        orderWarehouseType = "internal";
        selectedInternalWarehouse = string.Empty;
        externalWarehouseAddress = string.Empty;
        orderNotes = string.Empty;
        orderItems = new List<OrderItem> { new OrderItem() };

        // Загружаем склады организации
        LoadOrganizationWarehouses();
    }

    private async void LoadOrganizationWarehouses()
    {
        if (warehouse != null)
        {
            organizationWarehouses = await WarehouseService.GetOrganizationWarehousesAsync(warehouse.OrganizationId);
        }
    }

    private void CloseCreateOrderModal()
    {
        showCreateOrderModal = false;
    }

    private void AddOrderItem()
    {
        orderItems.Add(new OrderItem());
        StateHasChanged();
    }

    private void RemoveOrderItem(int index)
    {
        if (orderItems.Count > 1)
        {
            orderItems.RemoveAt(index);
            StateHasChanged();
        }
    }

