@page "/dashboard/organization/create"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.OrganizationService
@inject IAuthService AuthService
@inject IOrganizationService OrganizationService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 text-primary">
            <i class="fas fa-building me-2"></i>
            Создание организации
        </h1>
        <p class="lead text-muted">Создайте свою первую организацию для управления складами</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="fas fa-plus-circle me-2"></i>
                        Новая организация
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Название организации *</label>
                        <input @bind="organizationName" class="form-control form-control-lg @(GetFieldClass("name"))"
                               placeholder="Введите название вашей организации" />
                        @if (fieldErrors.ContainsKey("name"))
                        {
                            <div class="form-text text-danger">
                                @string.Join(" ", fieldErrors["name"])
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(generalError))
                    {
                        <div class="alert alert-danger">
                            @generalError
                        </div>
                    }

                    <button class="btn btn-success w-100 py-2 fw-bold" @onclick="CreateOrganization" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-rocket me-2"></i>
                        Создать организацию
                    </button>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            После создания организации вы сможете добавлять склады
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string organizationName = string.Empty;
    private bool isLoading = false;
    private Dictionary<string, List<string>> fieldErrors = new();
    private string generalError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Проверяем авторизацию
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/auth/login");
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка проверки авторизации";
            Console.WriteLine($"Ошибка: {ex.Message}");
        }
    }

    private string GetFieldClass(string fieldName)
    {
        return fieldErrors.ContainsKey(fieldName) ? "border-danger" : "";
    }

    private void ClearErrors()
    {
        fieldErrors.Clear();
        generalError = string.Empty;
    }

    private async Task CreateOrganization()
    {
        if (string.IsNullOrWhiteSpace(organizationName))
        {
            generalError = "Введите название организации";
            return;
        }

        isLoading = true;
        ClearErrors();
        StateHasChanged();

        try
        {
            var organization = await OrganizationService.CreateOrganizationAsync(organizationName);

            if (organization != null)
            {
                // Успешное создание - переходим к управлению
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
            else
            {
                generalError = "Не удалось создать организацию. Проверьте правильность данных.";
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка при создании организации";
            Console.WriteLine($"Ошибка: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }
}