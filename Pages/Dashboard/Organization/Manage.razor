@code {
    private List<Organization> organizations = new();
    private Organization? currentOrganization;
    private List<Warehouse> currentWarehouses = new();

    // Модальные окна
    private bool showCreateOrganizationModal = false;
    private bool showCreateWarehouseModal = false;
    private bool isLoading = false;

    // Данные для форм
    private string newOrganizationName = string.Empty;
    private string newWarehouseName = string.Empty;
    private string newWarehouseAddress = string.Empty;
    private string newWarehouseCity = string.Empty;
    private string newWarehouseState = string.Empty;
    private string newWarehouseCountry = string.Empty;
    private string newWarehouseZip = string.Empty;

    // Ошибки
    private Dictionary<string, List<string>> fieldErrors = new();
    private string generalError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            // Загружаем текущую организацию
            currentOrganization = await OrganizationService.GetCurrentOrganizationAsync();

            if (currentOrganization != null)
            {
                // Загружаем склады организации
                currentWarehouses = await WarehouseService.GetOrganizationWarehousesAsync();
            }

            // Загружаем список организаций пользователя
            organizations = await OrganizationService.GetUserOrganizationsAsync();
        }
        catch (Exception ex)
        {
            generalError = "Ошибка при загрузке данных";
            Console.WriteLine($"Ошибка загрузки: {ex.Message}");
        }
    }

    private string GetFieldClass(string fieldName)
    {
        return fieldErrors.ContainsKey(fieldName) ? "border-danger" : "";
    }

    private void ClearErrors()
    {
        fieldErrors.Clear();
        generalError = string.Empty;
    }

    // Методы для организаций
    private void ShowCreateOrganizationModal()
    {
        showCreateOrganizationModal = true;
        newOrganizationName = string.Empty;
        ClearErrors();
    }

    private void CloseCreateOrganizationModal()
    {
        showCreateOrganizationModal = false;
    }

    private async Task CreateOrganization()
    {
        if (string.IsNullOrWhiteSpace(newOrganizationName))
        {
            generalError = "Введите название организации";
            return;
        }

        isLoading = true;
        ClearErrors();
        StateHasChanged();

        try
        {
            var organization = await OrganizationService.CreateOrganizationAsync(newOrganizationName);

            if (organization != null)
            {
                // Успешное создание - переходим к управлению
                currentOrganization = organization;
                await LoadData();
                showCreateOrganizationModal = false;
            }
            else
            {
                generalError = "Не удалось создать организацию. Проверьте правильность данных.";
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка при создании организации";
            Console.WriteLine($"Ошибка: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }

    // Методы для складов
    private void ShowCreateWarehouseModal()
    {
        if (currentOrganization == null)
        {
            generalError = "Сначала выберите или создайте организацию";
            return;
        }

        showCreateWarehouseModal = true;
        newWarehouseName = string.Empty;
        newWarehouseAddress = string.Empty;
        newWarehouseCity = string.Empty;
        newWarehouseState = string.Empty;
        newWarehouseCountry = string.Empty;
        newWarehouseZip = string.Empty;
        ClearErrors();
    }

    private void CloseCreateWarehouseModal()
    {
        showCreateWarehouseModal = false;
    }

    private async Task CreateWarehouse()
    {
        if (currentOrganization == null)
        {
            generalError = "Организация не выбрана";
            return;
        }

        if (string.IsNullOrWhiteSpace(newWarehouseName) ||
            string.IsNullOrWhiteSpace(newWarehouseAddress) ||
            string.IsNullOrWhiteSpace(newWarehouseCity) ||
            string.IsNullOrWhiteSpace(newWarehouseState) ||
            string.IsNullOrWhiteSpace(newWarehouseCountry) ||
            string.IsNullOrWhiteSpace(newWarehouseZip))
        {
            generalError = "Заполните все обязательные поля";
            return;
        }

        isLoading = true;
        ClearErrors();
        StateHasChanged();

        try
        {
            var warehouseModel = new CreateWarehouseModel
            {
                Name = newWarehouseName,
                Address = newWarehouseAddress,
                City = newWarehouseCity,
                State = newWarehouseState,
                Country = newWarehouseCountry,
                Zip = newWarehouseZip
            };

            var warehouse = await WarehouseService.CreateWarehouseAsync(warehouseModel);

            if (warehouse != null)
            {
                currentWarehouses.Add(warehouse);
                showCreateWarehouseModal = false;
                StateHasChanged();
            }
            else
            {
                generalError = "Не удалось создать склад. Проверьте правильность данных.";
            }
        }
        catch (Exception ex)
        {
            generalError = "Ошибка при создании склада";
            Console.WriteLine($"Ошибка: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }

    private void ShowOrganizationsModal()
    {
        // Реализация модального окна выбора организации
        Navigation.NavigateTo("/dashboard/organizations");
    }

    private void ShowDeleteOrganizationModal()
    {
        // Реализация модального окна удаления организации
        // TODO: Реализовать удаление организации
    }
}