@page "/dashboard/organization/manage"
@using StockhubWeb.Models
@using StockhubWeb.Services
@using StockhubWeb.Services.AuthService
@using StockhubWeb.Services.OrganizationService
@using StockhubWeb.Services.WarehouseService
@inject IAuthService AuthService
@inject IOrganizationService OrganizationService
@inject IWarehouseService WarehouseService
@inject NavigationManager Navigation

<div class="container-fluid mt-3">
    <!-- Заголовок -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">
                <i class="fas fa-building me-2 text-primary"></i>
                Управление организацией
                @if (currentOrganization != null)
                {
                    <span class="text-primary">"@currentOrganization.Name"</span>
                }
            </h3>
            @if (currentOrganization != null)
            {
                <p class="text-muted mb-0">
                    Организация: @currentOrganization.Name • Роль: @currentOrganization.Role
                </p>
            }
        </div>
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-primary me-3" @onclick="ShowOrganizationsModal">
                <i class="fas fa-list me-1"></i>
                Организации
            </button>
        </div>
    </div>

    @if (currentOrganization != null)
    {
        <!-- Панель управления -->
        <div class="card mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Панель управления организацией</h5>
                <span class="badge bg-primary">@currentOrganization.Role</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6 mb-3">
                        <button class="btn btn-primary w-100 py-3" @onclick="ShowCreateWarehouseModal">
                            <i class="fas fa-warehouse me-2 fa-lg"></i>
                            Добавить склад
                        </button>
                    </div>
                    @if (currentOrganization.Role == "ADMIN")
                    {
                        <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6 mb-3">
                            <button class="btn btn-danger w-100 py-3" @onclick="ShowDeleteOrganizationModal">
                                <i class="fas fa-trash me-2 fa-lg"></i>
                                Удалить организацию
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Список складов -->
        <div class="card">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Склады организации</h5>
                <span class="badge bg-secondary">@currentWarehouses.Count</span>
            </div>
            <div class="card-body">
                @if (currentWarehouses.Count == 0)
                {
                    <div class="text-center py-5">
                        <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
                        <p class="text-muted">У вас пока нет складов в этой организации</p>
                        <button class="btn btn-primary" @onclick="ShowCreateWarehouseModal">
                            Создать первый склад
                        </button>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var warehouse in currentWarehouses)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 warehouse-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0 me-2">@warehouse.Name</h6>
                                            <span class="badge @(warehouse.Status == "ACTIVE" ? "bg-success" : "bg-warning")">
                                                @(warehouse.Status == "ACTIVE" ? "Активен" : "Неактивен")
                                            </span>
                                        </div>
                                        <p class="card-text text-muted small">
                                            <strong>@warehouse.City, @warehouse.Address</strong><br>
                                            <strong>Страна:</strong> @warehouse.Country<br>
                                            <strong>Создан:</strong> @warehouse.CreatedAt.ToString("dd.MM.yyyy")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>Добро пожаловать!</h4>
            <p>У вас пока нет организаций. Создайте свою первую организацию для управления складами.</p>
            <button class="btn btn-primary" @onclick="ShowCreateOrganizationModal">
                Создать первую организацию
            </button>
        </div>
    }
</div>

<!-- Модальное окно создания организации -->
@if (showCreateOrganizationModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        Создание организации
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateOrganizationModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название организации *</label>
                        <input @bind="newOrganizationName" class="form-control @(GetFieldClass("name"))"
                               placeholder="Введите название организации" />
                        @if (fieldErrors.ContainsKey("name"))
                        {
                            <div class="form-text text-danger">
                                @string.Join(" ", fieldErrors["name"])
                            </div>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(generalError))
                    {
                        <div class="alert alert-danger">
                            @generalError
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateOrganizationModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateOrganization" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Создать
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

<!-- Модальное окно создания склада -->
