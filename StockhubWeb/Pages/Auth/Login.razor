@page "/login"
@using StockhubWeb.Models
@using StockhubWeb.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-sign-in-alt me-2"></i>Вход в систему</h2>
            <p class="text-muted">Введите ваши учетные данные</p>
        </div>

        <div class="auth-body">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" @bind="loginModel.Email" class="form-control" placeholder="Введите ваш email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль</label>
                <input type="password" @bind="loginModel.Password" class="form-control" placeholder="Введите пароль" />
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" @bind="rememberMe" class="form-check-input" />
                <label class="form-check-label">Запомнить меня</label>
            </div>

            @if (isLoading)
            {
                <button class="btn btn-primary w-100 mb-3" disabled="disabled">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Вход...
                </button>
            }
            else
            {
                <button class="btn btn-primary w-100 mb-3" @onclick="PerformLogin">
                    Войти
                </button>
            }

            <div class="text-center">
                <a href="/forgot-password" class="btn btn-link p-0">
                    Забыли пароль?
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <span class="text-muted">Нет аккаунта? </span>
                <a href="/register" class="btn btn-link p-0">
                    Зарегистрироваться
                </a>
            </div>
        </div>
    </div>
</div>

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> Неверный email или пароль.
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@code {
    private LoginModel loginModel = new();
    private bool isLoading = false;
    private bool showError = false;
    private bool rememberMe = false;

    protected override void OnInitialized()
    {
        // При загрузке страницы входа проверяем, не авторизован ли пользователь
        CheckAuthentication();
    }

    private async void CheckAuthentication()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Navigation.NavigateTo("/dashboard/role-selection");
        }
    }

    private async Task PerformLogin()
    {
        isLoading = true;
        showError = false;

        var result = await AuthService.LoginUserAsync(loginModel);

        if (result)
        {
            Navigation.NavigateTo("/dashboard/role-selection");
        }
        else
        {
            showError = true;
        }

        isLoading = false;
        StateHasChanged();
    }

    private void DismissError()
    {
        showError = false;
    }
}