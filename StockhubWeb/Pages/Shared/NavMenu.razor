@inject IAuthService AuthService
@inject IOrganizationService OrganizationService

<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <i class="fas fa-boxes me-2"></i>
            <strong>StockhubWeb</strong>
        </a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <a class="nav-link @GetNavLinkClass("/dashboard/employee")" href="/dashboard/employee">
                <i class="fas fa-warehouse me-2"></i>
                Мои склады
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link @GetNavLinkClass("/dashboard/organization/manage")" href="/dashboard/organization/manage">
                <i class="fas fa-building me-2"></i>
                Управление организацией
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" href="#">
                <i class="fas fa-chart-bar me-2"></i>
                Отчеты
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" href="#">
                <i class="fas fa-cog me-2"></i>
                Настройки
            </a>
        </div>
    </nav>
</div>

@code {
    private string GetNavLinkClass(string path)
    {
        return NavigationManager.Uri.Contains(path) ? "active" : "";
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
}