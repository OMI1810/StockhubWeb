@page "/dashboard/warehouses/{warehouseId}"
@using StockhubWeb.Models
@using StockhubWeb.Services
@inject IAuthService AuthService
@inject IWarehouseService WarehouseService
@inject NavigationManager Navigation

<div class="container mt-4">
    @if (warehouse != null)
    {
        <!-- Заголовок склада -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="fas fa-warehouse me-2 text-primary"></i>
                    @warehouse.Name
                </h2>
                <div class="text-muted">
                    <span class="badge @(warehouse.IsActive ? "bg-success" : "bg-warning") me-2">
                        @(warehouse.IsActive ? "Активен" : "Неактивен")
                    </span>
                    <small>Товаров: @products.Count</small>
                </div>
            </div>
            <div>
                <button class="btn btn-outline-secondary me-2" @onclick="GoBack">
                    <i class="fas fa-arrow-left me-1"></i>
                    Назад к складам
                </button>
            </div>
        </div>

        <!-- Навигация по вкладкам -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link @(activeTab == "products" ? "active" : "")"
                   @onclick="@(() => SwitchTab("products"))">
                    <i class="fas fa-boxes me-1"></i>
                    Товары (@products.Count)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(activeTab == "transfers" ? "active" : "")"
                   @onclick="@(() => SwitchTab("transfers"))">
                    <i class="fas fa-exchange-alt me-1"></i>
                    История перемещений (@transfers.Count)
                </a>
            </li>
        </ul>

        @if (activeTab == "products")
        {
            <!-- Вкладка товаров -->
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Товары на складе</h5>
                    <small class="text-muted">Всего: @filteredProducts.Count</small>
                </div>
                <div class="card-body p-0">
                    @if (filteredProducts.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Товары не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Название</th>
                                        <th>Категория</th>
                                        <th>Количество</th>
                                        <th>Цена</th>
                                        <th>Общая стоимость</th>
                                        <th>Дата обновления</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in filteredProducts)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@product.Name</strong>
                                                    @if (!string.IsNullOrEmpty(product.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@product.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@product.Category</span>
                                            </td>
                                            <td>
                                                <span class="@GetQuantityClass(product.Quantity) fw-bold">
                                                    @product.Quantity
                                                </span>
                                            </td>
                                            <td>@product.Price.ToString("C")</td>
                                            <td>
                                                <strong class="text-success">
                                                    @((product.Quantity * product.Price).ToString("C"))
                                                </strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @product.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    @if (activeTab == "transfers")
    {
            <!-- Вкладка истории перемещений -->
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">История перемещений товаров</h5>
                    <small class="text-muted">Всего операций: @transfers.Count</small>
                </div>
                <div class="card-body p-0">
                    @if (transfers.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Перемещения не найдены</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Дата</th>
                                        <th>Товар</th>
                                        <th>Откуда</th>
                                        <th>Куда</th>
                                        <th>Количество</th>
                                        <th>Примечание</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in transfers)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">
                                                    @transfer.TransferDate.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <strong>@transfer.ProductName</strong>
                                            </td>
                                            <td>
                                                @if (transfer.FromWarehouseId == warehouse?.Id)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-arrow-up me-1"></i>
                                                        Отправлено
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@transfer.FromWarehouseName</span>
                                                }
                                            </td>
                                            <td>
                                                @if (transfer.ToWarehouseId == warehouse?.Id)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-arrow-down me-1"></i>
                                                        Получено
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@transfer.ToWarehouseName</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="fw-bold">@transfer.Quantity</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@transfer.Notes</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Статистика перемещений -->
                        <div class="card-footer bg-light">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <small class="text-muted">Получено товаров</small>
                                    <div class="fw-bold text-success">@receivedTransfers</div>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Отправлено товаров</small>
                                    <div class="fw-bold text-danger">@sentTransfers</div>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Всего операций</small>
                                    <div class="fw-bold text-primary">@transfers.Count</div>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Общее количество</small>
                                    <div class="fw-bold text-warning">@totalTransferredQuantity</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

    

@code {
    [Parameter]
    public string WarehouseId { get; set; } = string.Empty;

    private Warehouse? warehouse;
    private List<Product> products = new();
    private List<Product> filteredProducts = new();
    private List<ProductTransfer> transfers = new();
    private string activeTab = "products";
    private string searchTerm = string.Empty;
    private string categoryFilter = string.Empty;
    private string sortBy = "name";

    private int receivedTransfers => transfers.Count(t => t.ToWarehouseId == warehouse?.Id);
    private int sentTransfers => transfers.Count(t => t.FromWarehouseId == warehouse?.Id);
    private int totalTransferredQuantity => transfers.Sum(t => t.Quantity);

    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouseData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadWarehouseData();
    }

    private async Task LoadWarehouseData()
    {
        if (!string.IsNullOrEmpty(WarehouseId))
        {
            warehouse = await WarehouseService.GetWarehouseAsync(WarehouseId);
            if (warehouse != null)
            {
                products = await WarehouseService.GetWarehouseProductsAsync(WarehouseId);
                transfers = await WarehouseService.GetProductTransfersAsync(WarehouseId);
                FilterProducts();
            }
        }
    }

    private void SwitchTab(string tabName)
    {
        activeTab = tabName;
        StateHasChanged();
    }

    private void FilterProducts()
    {
        var query = products.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(p =>
                p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Category.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        if (!string.IsNullOrWhiteSpace(categoryFilter))
        {
            query = query.Where(p => p.Category == categoryFilter);
        }

        query = sortBy switch
        {
            "quantity" => query.OrderBy(p => p.Quantity),
            "price" => query.OrderBy(p => p.Price),
            "date" => query.OrderBy(p => p.UpdatedAt ?? p.CreatedAt),
            _ => query.OrderBy(p => p.Name)
        };

        filteredProducts = query.ToList();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/dashboard/employee");
    }

    private string GetQuantityClass(int quantity)
    {
        return quantity switch
        {
            0 => "text-danger",
            < 10 => "text-warning",
            _ => "text-success"
        };
    }

    // Вычисляемые свойства для статистики
    private int totalQuantity => products.Sum(p => p.Quantity);
    private decimal totalValue => products.Sum(p => p.Quantity * p.Price);
    private List<string> categories => products.Select(p => p.Category).Distinct().ToList();
}