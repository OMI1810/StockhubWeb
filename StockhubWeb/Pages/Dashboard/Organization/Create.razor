@page "/dashboard/organization/create"
@using StockhubWeb.Models
@using StockhubWeb.Services
@inject IAuthService AuthService
@inject IOrganizationService OrganizationService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Создание организации
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="form-label">Название организации *</label>
                        <input @bind="organizationName" class="form-control" placeholder="Введите название вашей организации" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Пароль организации *</label>
                        <input type="password" @bind="organizationPassword" class="form-control" placeholder="Придумайте пароль для организации" />
                        <small class="form-text text-muted">
                            Этот пароль понадобится сотрудникам для присоединения к вашей организации
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Подтверждение пароля *</label>
                        <input type="password" @bind="confirmPassword" class="form-control" placeholder="Подтвердите пароль организации" />
                    </div>

                    <button class="btn btn-success w-100" @onclick="CreateOrganization" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Создать организацию
                    </button>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Уже есть организация?
                            <button class="btn btn-link p-0" @onclick="JoinOrganization">
                                Присоединиться
                            </button>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (showError)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert">
        <strong>Ошибка!</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="DismissError"></button>
    </div>
}

@code {
    private string organizationName = string.Empty;
    private string organizationPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private bool isLoading = false;
    private bool showError = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user == null)
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task CreateOrganization()
    {
        if (!ValidateForm())
            return;

        isLoading = true;

        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            var result = await OrganizationService.CreateOrganizationAsync(
                organizationName,
                organizationPassword,
                user.Id
            );

            if (result)
            {
                Navigation.NavigateTo("/dashboard/organization/manage");
            }
            else
            {
                errorMessage = "Ошибка при создании организации";
                showError = true;
            }
        }

        isLoading = false;
        StateHasChanged();
    }

    private bool ValidateForm()
    {
        if (string.IsNullOrWhiteSpace(organizationName))
        {
            errorMessage = "Введите название организации";
            showError = true;
            return false;
        }

        if (string.IsNullOrWhiteSpace(organizationPassword))
        {
            errorMessage = "Введите пароль организации";
            showError = true;
            return false;
        }

        if (organizationPassword != confirmPassword)
        {
            errorMessage = "Пароли не совпадают";
            showError = true;
            return false;
        }

        return true;
    }

    private void JoinOrganization()
    {
        Navigation.NavigateTo("/dashboard/employee");
    }

    private void DismissError()
    {
        showError = false;
    }
}